{
    "version": 2,
    "builds": [
      { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
      { "src": "api/**/*.js", "use": "@vercel/node" }
    ],
    "rewrites": [
      {
        "source": "/api/:path*",
        "destination": "/api/:path*"
      },
      {
        "source": "/(.*)",
        "destination": "/client/index.html"
      }
    ]
}
  